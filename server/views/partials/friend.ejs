<li class="friend-list" data-uuid="<%= friend.uuid %>">
    <div class="friend-chat-head">
        <div class="user-profile">
            <img src="<%= friend.profile_image %>">
        </div>
        <div class="details">
            <div class="name">
                <%= friend.username %>
                <i class="fas fa-toggle-<% if (onlineUsers.uuid != undefined) { %>on<% } else { %>off<% } %> online-status"></i>
            </div>
            <div class="last-message">
                <%= friend.chat.message.slice(0, 40) + (friend.chat.message.length > 40 ? "..." : "") %>
            </div>
        </div>
        <div class="other-details">
            <div class="last-message-date">
                <%= new Date(friend.chat.createdAt).getHours().toString().padStart(2, "0") %>:<%= new Date(friend.chat.createdAt).getMinutes().toString().padStart(2, "0"); %>
            </div>
        </div>
    </div>
</li>