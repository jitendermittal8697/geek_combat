<li class="friend-list" data-uuid="<%= friend.uuid %>">
    <div class="friend-chat-head">
        <div class="user-profile">
            <img src="<%= friend.profile_image %>">
        </div>
        <div class="details">
            <div class="name">
                <%= friend.name %>
            </div>
            <div class="last-message">
                <%= friend.last_message %>
            </div>
        </div>
        <div class="other-details">
            <div class="last-message-date">
                <%= friend.last_message_date %>
            </div>
        </div>
    </div>
</li>