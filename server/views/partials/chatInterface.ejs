<% if (friend.username) { %>
    <div class="chat-interface">
    <div class="chat-interface-head">
        <div class="user-profile">
            <img src="<%= friend.profile_image %>" />
        </div>
        <div class="friend-details" data-uuid="<%= friend.uuid %>">
            <div class="name"><%= friend.username %></div>
            <div class="last-message"><%= friend.last_message %></div>
        </div>
    </div>

    <%- include('chatBody', {friend:friend, chats: chats}); %>
    </div>

    <div class="custom-file-container" data-upload-id="myUploader">
        <div style="display: none;">
        <a href="javascript:void(0)" class="custom-file-container__image-clear" title="Clear Image">&times;</a>
        <label class="custom-file-container__custom-file">
            <input
                type="file"
                class="custom-file-container__custom-file__custom-file-input"
                accept="*"
                multiple
                aria-label="Choose File"
            />
            <input type="hidden" name="MAX_FILE_SIZE" value="10485760" />
            <span
                class="custom-file-container__custom-file__custom-file-control"
            ></span>
        </label>
        </div>
        <div class="custom-file-container__image-preview" style="overflow-x: hidden;"></div>
    </div>
    <div class="speech_to_text">
        <div class="results">
            <span id="final_span" contenteditable="true"></span>
            <span id="interim_span"></span>
            <div id="stt-controls">
                <i class="fas fa-times stt-close-btn" aria-hidden="true"></i>
                <button type="submit" class="stt-clear-btn">Clear</button>
                <button type="submit" class="stt-edit-btn">Edit Before Send</button>
                <button type="submit" class="stt-send-btn">Send</button>
            </div>
        </div>

    </div>
    <form class="msger-inputarea">
        <i class="fas fa-microphone-slash microphone" aria-hidden="true" style="font-size: 25px;padding: 5px;display: flex;
        align-self: center;"></i>
        <input type="text" data-emoji-input="unicode" data-emojiable="true" class="msger-input" placeholder="Enter your message..." name="message">
        <i id="file-upload" class="fa fa-paperclip" aria-hidden="true" style="font-size: 25px;padding: 5px;display: flex;
        align-self: center;"></i>
        <button type="submit" class="msger-send-btn">Send</button>
    </form>
<% } else { %>

<% } %>